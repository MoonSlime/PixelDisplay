<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/fragment_fontsize_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:inputType="text"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <RadioButton
            android:id="@+id/fragment_fontsize_font1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="40dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="left|center_vertical"
            android:tag="14"
            android:text="가장 작게"
            android:textColor="#3C3C3C"
            android:textSize="14dp" />

        <RadioButton
            android:id="@+id/fragment_fontsize_font2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="40dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="left|center_vertical"
            android:tag="16"
            android:text="작게"
            android:textColor="#3C3C3C"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/fragment_fontsize_font3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="40dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="left|center_vertical"
            android:tag="18"
            android:text="보통"
            android:textColor="#3C3C3C"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/fragment_fontsize_font4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="40dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="left|center_vertical"
            android:tag="20"
            android:text="크게"
            android:textColor="#3C3C3C"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/fragment_fontsize_font5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="40dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="left|center_vertical"
            android:tag="24"
            android:text="더 크게"
            android:textColor="#3C3C3C"
            android:textSize="24dp" />

        <RadioButton
            android:id="@+id/fragment_fontsize_font6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:button="@null"
            android:drawablePadding="40dp"
            android:drawableRight="@android:drawable/btn_radio"
            android:gravity="left|center_vertical"
            android:tag="28"
            android:text="가장 크게"
            android:textColor="#3C3C3C"
            android:textSize="28dp" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_fontsize_apply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_weight="50"
                android:background="#3C3C3C"
                android:gravity="center_horizontal|center_vertical"
                android:text="적용"
                android:textColor="#FCFCfC"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>