<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1715">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="836"
        android:background="#F0F0F0"
        android:gravity="center">

        <TextView
            android:id="@+id/test_visual_acuity_textview_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="두비두밤" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="879"
        android:background="@drawable/common_test_bottom_background"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="264" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="350"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1080">

            <ImageButton
                android:id="@+id/test_visual_acuity_imagebutton_cantsee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="350"
                android:background="@drawable/test_visual_acuity_imagebutton_cantsee" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="130" />

            <ImageButton
                android:id="@+id/test_visual_acuity_imagebutton_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="350"
                android:background="@drawable/test_visual_acuity_imagebutton_next" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="265" />

    </LinearLayout>

</LinearLayout>



