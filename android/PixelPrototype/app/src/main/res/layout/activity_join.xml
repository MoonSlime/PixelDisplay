<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="이메일"
            android:textColor="#000000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fragment_join_email"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="20"
            android:inputType="textEmailAddress"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="핸드폰"
            android:textColor="#000000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fragment_join_phone"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="20"
            android:inputType="phone"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fragment_join_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="12"
            android:inputType="textPassword"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="나이"
            android:textColor="#000000"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/fragment_join_age"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="2"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="성별"
            android:textColor="#000000"
            android:textSize="14dp" />

        <RadioGroup
            android:id="@+id/fragment_join_check"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/fragment_join_check_male"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="남"
                android:textColor="#000000"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/fragment_join_check_female"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="여"
                android:textColor="#000000"
                android:textSize="14dp" />


        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/fragment_join_finish"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="가입완료" />


</LinearLayout>