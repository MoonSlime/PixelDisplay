<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5151c2"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="필터 조절"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal|center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/filter_daily_life_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/display_filter_daily_life_button" />

            <TextView
                android:id="@+id/filter_daily_life_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="일상\n 10~20%"
                android:textColor="#FF000000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/filter_break_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/display_filter_break_button" />

            <TextView
                android:id="@+id/filter_break_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="휴식\n 20~40%"
                android:textColor="#FF000000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/filter_sleeping_button"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/display_filter_sleeping_button" />

            <TextView
                android:id="@+id/filter_sleeping_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="취침\n 40~60%"
                android:textColor="#FF000000"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>


    <SeekBar
        android:layout_marginBottom="20dp"
        android:id="@+id/dialog_filter_seekbar"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:max="255"
        android:progress="0" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:weightSum="154">

        <TextView
            android:id="@+id/dialog_filter_apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="50"
            android:gravity="center_horizontal|center_vertical"
            android:text="적용"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="#000000" />

        <TextView
            android:id="@+id/dialog_filter_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="50"
            android:gravity="center_horizontal|center_vertical"
            android:text="해제"
            android:textColor="#000000"
            android:textSize="20sp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="#000000" />

        <TextView
            android:id="@+id/dialog_filter_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="50"
            android:gravity="center_horizontal|center_vertical"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>