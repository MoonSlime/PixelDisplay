<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1715">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="150" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="650"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1080">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="876"
            android:background="@drawable/test_explain_image" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="90"
        android:gravity="center"
        android:text="눈에 맞는 화면을 위해 눈검사를 진행합니다."
        android:textColor="@color/white"
        android:textSize="18dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="300"
        android:orientation="horizontal"
        android:weightSum="1080">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="880"
            android:orientation="vertical"
            android:weightSum="300">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:text="1. 팔을 쭉 뻗고 검사를 진행해 주세요."
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:text="2. 글씨가 잘 보이면 [다음] 버튼을 누르세요."
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100"
                android:text="3. 흐릿해졌을 때 [안보임] 버튼을 누르세요."
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="110"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1080">

        <ImageButton
            android:id="@+id/test_explain_imagebutton_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="325"
            android:background="@drawable/common_imagebutton_start" />
    </LinearLayout>


</LinearLayout>