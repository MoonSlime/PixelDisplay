<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:weightSum="1715">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="500"
        android:background="@drawable/record_background"
        android:orientation="horizontal"
        android:weightSum="1080">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"
            android:orientation="vertical"
            android:weightSum="500">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="160" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200">

                <com.pixeldp.view.widgets.HoloCircleSeekBar
                    android:id="@+id/record_seekbar_astigmatism_probability"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:background_color="#00FFFFFF"
                    app:max="100"
                    app:pointer_color="#00FFFFFF"
                    app:pointer_halo_color="#00FFFFFF"
                    app:show_background="false"
                    app:show_text="false"
                    app:wheel_active_color="#FFFFFF"
                    app:wheel_unactive_color="#7FFFFFFF" />

                <TextView
                    android:id="@+id/record_textview_astigmatism_probability"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="높음"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/record_textview_astigmatism"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:gravity="center"
                android:text="난시 가능성"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="326"
            android:orientation="vertical"
            android:weightSum="500">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="326">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <com.pixeldp.view.widgets.HoloCircleSeekBar
                        android:id="@+id/record_seekbar_opti_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:background_color="#00FFFFFF"
                        app:max="100"
                        app:pointer_color="#00FFFFFF"
                        app:pointer_halo_color="#00FFFFFF"
                        app:show_background="false"
                        app:show_text="false"
                        app:wheel_active_color="#FFFFFF"
                        app:wheel_unactive_color="#7FFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="760">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="280" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/record_textview_opti_result_value"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:includeFontPadding="false"
                            android:text="8"
                            android:textColor="@color/white"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/record_textview_opti_step"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:includeFontPadding="false"
                            android:text="단계"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/record_textview_opti_result"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="140"
                        android:gravity="center"
                        android:text="좋음"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="280" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/record_textview_opti"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="75"
                android:gravity="center"
                android:text="눈 검사 결과"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="27" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="220"
            android:orientation="vertical"
            android:weightSum="500">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="160" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="200">

                <com.pixeldp.view.widgets.HoloCircleSeekBar
                    android:id="@+id/record_seekbar_blindness_probability"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:background_color="#00FFFFFF"
                    app:max="100"
                    app:pointer_color="#00FFFFFF"
                    app:pointer_halo_color="#00FFFFFF"
                    app:show_background="false"
                    app:show_text="false"
                    app:wheel_active_color="#FFFFFF"
                    app:wheel_unactive_color="#7FFFFFFF" />

                <TextView
                    android:id="@+id/record_textview_blindness_probability"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="높음"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/record_textview_blindness"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:gravity="center"
                android:text="색맹/색약 가능성"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="110" />

    </LinearLayout>

    <ListView
        android:id="@+id/record_list_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1215"
        android:background="#E0E0E0">

    </ListView>
</LinearLayout>